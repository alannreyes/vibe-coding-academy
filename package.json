{
  "name": "vibe-coding-academy",
  "version": "1.0.0",
  "private": true,
  "description": "Plataforma de aprendizaje gamificada para Fullstack con IA Generativa",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:backend": "pnpm --filter @vibe/backend dev",
    "dev:frontend": "pnpm --filter @vibe/frontend dev",
    "build": "pnpm run --parallel build",
    "lint": "pnpm run --parallel lint",
    "db:migrate": "pnpm --filter @vibe/backend prisma:migrate",
    "db:seed": "pnpm --filter @vibe/backend prisma:seed",
    "db:studio": "pnpm --filter @vibe/backend prisma:studio"
  },
  "keywords": ["learning", "gamification", "ai", "fullstack"],
  "author": "Vibe Coding Academy",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
